<% /* Title and H1 */ %>
    <% if (title) { %>
        <title>
            <%= title %>
        </title>
        <h1>
            <%= title %>
        </h1>
        <% } else { %>
            <title>Register</title>
            <h1>Register</h1>
            <% } %>

                <% /* Flash/message area (unescaped or escaped as you prefer). Use escaped output for safety. */ %>
                    <% if (typeof message !=='undefined' && message) { %>
                        <div class="flash-message">
                            <%# message %>
                        </div>
                        <% } %>

                            <form action="/account/register" method="POST" class="register-form" novalidate>
                                <div>
                                    <label for="clientFirstName">First name</label>
                                    <input id="clientFirstName" name="clientFirstName" type="text"
                                        placeholder="John" required />
                                </div>

                                <div>
                                    <label for="clientLastName">Last name</label>
                                    <input id="clientLastName" name="clientLastName" type="text"
                                        placeholder="Doe" required />
                                </div>

                                <div>
                                    <label for="clientEmail">Email address</label>
                                    <input id="clientEmail" name="clientEmail" type="email"
                                        placeholder="you@example.com" required />
                                </div>

                                <div>
                                    <label for="clientPassword">Password</label>
                                    <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
                                    <input id="clientPassword" name="clientPassword" type="password"
                                        placeholder="Password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"/>
                                </div>

                                <div>
                                    <button type="submit">Register</button>
                                </div>
                            </form>

                            <p>
                                Already have an account? <a href="/account/login">Login</a>
                            </p>